<div class="card">
    <div class="card-body">
        <h4>Nova Reserva</h4>
        <form action="/usuario/reservaslabcon/novo" method="POST" class="needs-validation" novalidate>
            <label for="grupo">Grupo: </label>
            <select name="grupo" class="custom-select" required>
                {{#each grupos}}
                <option value="{{_id}}">{{descricao}} 
                    - {{turma.descricao}} {{turma.subturma}}</option>
                {{else}}
                <option value="0">Nenhum Grupo Registrado</option>
                {{/each}}
            </select>
            <div class="invalid-feedback">Escolher o grupo.</div>
            <label for="horario">Horário: </label>
            <select name="horario" class="custom-select" required>
                {{#each horarios}}
                <option value="{{_id}}">{{descricao}}</option>
                {{else}}
                <option value="0">Nenhuma Horário Registrado</option>
                {{/each}}
            </select>
            <div class="invalid-feedback">Escolher um horário.</div>
            <br>
            <label for="data">Data: </label>
            <input type="date" id="data" name="data" min="2020-01-01" max="2020-12-31" class="form-control" required>
            <div class="invalid-feedback">Escolher uma data.</div>
            <br>
            <button class="btn btn-dark mt-4" type="submit">Cadastrar</button>
            <button class="btn btn-secondary mt-4" type="reset">Cancelar</button>
        </form>
    </div>
</div>