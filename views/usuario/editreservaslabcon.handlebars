<div class="card">
    <div class="card-body">
        <h4>Editar Reserva</h4>
        <form action="/usuario/reservaslabcon/edit" method="POST">
            <input type="hidden" name="id" value="{{reservalabcon._id}}">
            <label for="grupo">Grupo: </label>
            <select name="grupo" class="custom-select">
                {{#each grupos}}
                <option value="{{_id}}">{{descricao}} 
                    - {{turma.descricao}} {{turma.subturma}}</option>
                {{else}}
                <option value="0">Nenhum Grupo Registrado</option>
                {{/each}}
            </select>
            <label for="horario">Horário: </label>
            <select name="horario" class="custom-select">
                {{#each horarios}}
                <option value="{{_id}}">{{descricao}}</option>
                {{else}}
                <option value="0">Nenhum Horário Registrada</option>
                {{/each}}
            </select>
            <label for="data">Data: </label>
            <input value={{reservalabcon.data}} type="date" id="data" name="data" min="2020-01-01" max="2020-12-31" class="form-control">
            <br>
            <button class="btn btn-success mt-4" type="submit">Editar Reserva</button>
        </form>
    </div>
</div>