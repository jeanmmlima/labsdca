<div class="card">
    <div class="card-body">
        <h4>Editar Grupo</h4>
        <form action="/admin/grupos/edit" method="POST" class="needs-validation" novalidate>
            <input type="hidden" name="id" value="{{grupo._id}}">
            <label for="descricao">Nome: </label>
            <input type="text" name="descricao" class="form-control" value="{{grupo.descricao}}" required>
            <label for="bancada">Bancada: </label>
            <select name="bancada" class="custom-select" required>
                {{#each bancadas}}
                <option value="{{_id}}" {{selected _id ../grupo.bancada}}>{{descricao}}</option>
                {{else}}
                <option value="0">Nenhuma Bancada Registrada</option>
                {{/each}}
            </select>
            <label for="turma">Turma: </label>
            <select name="turma" class="custom-select" required>
                {{#each turmas}}
                <option value="{{_id}}" {{selected _id ../grupo.turma}}>{{descricao}} - {{subturma}}</option>
                {{else}}
                <option value="0">Nenhuma Turma Registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-dark mt-4" type="submit">Editar Grupo</button>
        </form>
    </div>
</div>