{{>_navlabcon}}

<h2>Lista de Turmas</h2>
<hr>
<a href="/admin/turmas/add"><button class="btn btn-success">Nova Turma</button></a>

{{#each turmas}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{descricao}}</h4>
            <small>{{subturma}}</small><br>
            <a href="/admin/turmas/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Turma</button></a>
            <form action="/admin/turmas/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar Turma</button>
            </form>
        </div>
    </div>
{{else}}
<h4 class="mt-3">Nenhuma Turma Cadastrada</h4>

{{/each}}