    <h2>Lista de Grupos</h2>
    <hr>
    <a href="/admin/grupos/add"><button class="btn btn-dark"><i class="icon-plus"></i> Novo Grupo</button></a>

    <div class="row">
        {{#each grupos}}
        <div class="col-sm-4">

        <div class="card mt-4">
