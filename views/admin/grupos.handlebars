                <p>{{descricao}}</p>
                <small>{{bancada.descricao}}</small><br>
                <small>Turma: {{turma.descricao}} - {{turma.subturma}}</small><br>
                <a href="/admin/grupos/edit/{{_id}}"><button class="btn btn-outline-dark mt-2"><i class="icon-fixed-width icon-pencil"></i>Editar</button></a>
                <a href="/admin/grupos/deletar/{{_id}}"><button class="btn btn-outline-dark mt-2"><i class="icon-fixed-width icon-ban-circle"></i>Deletar</button></a>
            </div>
            </div>
        </div>
        {{else}}
